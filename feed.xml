---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Web Performance News</title>
    <description>The weekly newsletter on everything web performance</description>    
    <link>http://webperformancenews.com/</link>
    <atom:link href="http://webperformancenews.com/feed.xml" rel="self" type="application/rss+xml" />
    {% for news in site.data.news3.articles limit:10 %}
      <item>
        <title>{{ news.title | xml_escape }}</title>
        <description>{{ news.description | xml_escape }}</description>
        <pubDate>{{ site.data.news3.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <author>http://twitter.com/{{ news.author }}</author>
        <link>{{ news.url }}</link>
      </item>
    {% endfor %}
    {% for news in site.data.news3.videos limit:10 %}
      <item>
        <title>{{ news.title | xml_escape }}</title>
        <description>{{ news.description | xml_escape }}</description>
        <pubDate>{{ site.data.news3.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <author>http://twitter.com/{{ news.author }}</author>
        <link>{{ news.url }}</link>
      </item>
    {% endfor %}
  </channel>
</rss>